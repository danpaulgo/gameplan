<h2>
  <% if !!@search_term %>
    Search Results for "<%= @search_term %>"
  <% else %>
    All Users
  <% end %>
</h2>
<ol>
<% @users.each do |user| %>
  <li><a href="/users/<%= user.username %>"><%= user.username %></a></li>
<% end %>
</ol>
<form action="/users/search" method="get">
  <input type="text" id="search_term" name="s" placeholder="Search Users" value="<%= @search_term if @search_term %>">
  <input type="submit" value="Search">
</form>
<p style="font-size: 14; margin-top: 48px"><i><a href="/users">Browse Users</a> | <a href="/gameplans">Browse Gameplans</a> | <a href="/">Return Home</a></i></p>